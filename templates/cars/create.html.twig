{% extends "base.html.twig" %}


{% block body %}
    {{ include('layouts/navbar.html.twig') }}

    <h1>Create car</h1>
    {{ form_start(form) }}

    {{ form_end(form) }}


    <main role="main" class="bg-light">
        <div class="container py-3 rounded-lg ">
            <div class="my-3 p-3 px-5 rounded shadow-lg bg-white ">
                <div class="alert alert-primary alert-dismissible mt-5 fade show" role="alert">
                    Your new car has been created successfully!
                </div>
                <h4 class="mt-3">Create your new car</h4>
                <p>An example of the extended form with typical checkout inputs.</p>
                <form action="/create" method="post" enctype="multipart/form-data">

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="form-label" for="form6Example1">Name</label>
                            <input type="text" value="" name="name" id="form6Example1" class="form-control"/>
                            <div style="color: red; font-style: italic;">
                                Error
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label" for="form6Example3">Type</label>
                            <input type="text" value="" name="type" id="form6Example3" class="form-control"/>
                            <div style="color: red; font-style: italic;">
                                Error
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="form-label" for="form6Example4">Brand</label>
                            <input type="text" value="" name="brand" id="form6Example4" class="form-control"/>
                            <div style="color: red; font-style: italic;">
                                Error
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label" for="form6Example5">Production Year</label>
                            <input type="number" value="" name="production_year" min="1900" max="2099" step="1"
                                   value="2022"
                                   class="form-control"/>
                            <div style="color: red; font-style: italic;">
                                Error
                            </div>
                        </div>
                    </div>


                    <!-- Number input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example6">Price</label>
                        <input type="number" value="" name="price" id="form6Example6" class="form-control"/>
                        <div style="color: red; font-style: italic;">
                            Error
                        </div>
                    </div>

                    <!-- Message input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form6Example7">Description</label>
                        <textarea class="form-control" name="description" id="form6Example7"
                                  rows="4"></textarea>
                        <div style="color: red; font-style: italic;">
                            Error
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlFile1">Image</label>
                        <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1">
                        <div style="color: red; font-style: italic;">
                            Error
                        </div>
                    </div>

                    <!-- Submit button -->
                    <div class="d-flex align-items-center justify-content-center pb-4">
                        <a href="/" class="btn btn-light fa-lg gradient-custom-2 mr-4">Cancel</a>
                        <button type="submit" class="btn btn-primary ml-4">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </main>


{% endblock %}
